@using Microsoft.AspNetCore.Identity;
@using StudentApp.V1.Models;
@inject SignInManager<ApplicationUser> SignInManager;
@inject UserManager<ApplicationUser> UserManager;
@inject Router Link;

@{
    string returnUrl = null;
    var query = Link.Uri.ToString();
    if (query.Contains("?returnUrl"))
    {
        returnUrl = query.Substring(query.IndexOf("?returnUrl=") + 11);
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" @routerlink="['/account/manage/index']" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" @routerlink="['/account/logout', {returnUrl: '/'}]" >
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" @routerlink="['/account/register', {returnUrl: '@returnUrl'}]">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" @routerlink="['/account/login', {returnUrl: '@returnUrl'}]">Login</a>
        </li>
    }
</ul>